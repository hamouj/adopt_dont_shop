<%= render partial: "shared/app_information.html.erb"%>
<div id="pet-section">
<h3>Names of the pet(s) you want to adopt</h3>
<% if @application.status == "In Progress" && @application.pets.empty? %>
  <%= render "app_pets" %>
  <%= render "add_pets" %>
<% elsif @application.status == "In Progress" %>
  <%= render "submit_app" %>
  <%= render "app_pets" %>
  <%= render "add_pets" %>
<% else %>
  <%= render "app_pets" %>
<% end %>
</div>
<h3>Status</h3>
<%= @application.status %>